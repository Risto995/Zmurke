<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.riki.myplaces.Main2Activity"
    android:layout_centerVertical="true">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="54dp"
        android:layout_height="21dp"
        android:text="HELP"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHelp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="89dp"
        android:layout_height="25dp"
        android:text="RANKING"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.635"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRank" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:text="MAP"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintTop_toTopOf="@+id/imageViewMap"
        android:layout_marginTop="147dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="87dp"
        android:layout_height="22dp"
        android:text="FRIENDS"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFriends"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="87dp"
        android:layout_height="22dp"
        android:text="PROFILE"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfile"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.467" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageViewSlika"
        android:layout_width="269dp"
        android:layout_height="58dp"
        app:layout_constraintLeft_toRightOf="@+id/my_toolbar"
        app:layout_constraintRight_toLeftOf="@+id/my_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/crne" />

    <ImageView
        android:id="@+id/imageViewFriends"
        android:layout_width="128dp"
        android:layout_height="132dp"
        android:clickable="true"
        app:srcCompat="@drawable/friends"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfile"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.228" />

    <ImageView
        android:id="@+id/imageViewMap"
        android:layout_width="158dp"
        android:layout_height="169dp"
        android:clickable="true"
        app:srcCompat="@drawable/placeholder"
        android:layout_marginStart="25dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPlay" />

    <ImageView
        android:id="@+id/imageViewRank"
        android:layout_width="156dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/quality"
        android:layout_marginEnd="217dp"
        tools:layout_editor_absoluteX="31dp"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewHelp"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="146dp"
        android:layout_height="133dp"
        app:srcCompat="@drawable/vinyl"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="71dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewProfile"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="174dp"
        android:layout_height="131dp"
        android:clickable="true"
        app:srcCompat="@drawable/cat"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewHelp"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/faq"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFriends"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.47" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_end="183dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="54dp"
        android:layout_height="21dp"
        android:text="PLAY"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPlay"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.605" />


</android.support.constraint.ConstraintLayout>
