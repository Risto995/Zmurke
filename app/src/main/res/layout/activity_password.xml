<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.riki.myplaces.PasswordActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="30dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/pass"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="30dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/pass"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView19" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="30dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/pass"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/oPass"
        android:layout_marginBottom="3dp" />

    <EditText
        android:id="@+id/nPass"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="new password"
        app:layout_constraintLeft_toRightOf="@+id/imageView19"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/oPass" />

    <EditText
        android:id="@+id/oPass"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="current password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/imageView16"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="72dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/key"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="78dp" />

    <EditText
        android:id="@+id/newPass2"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="new password once more"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/imageView18"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/nPass" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="76dp"
        android:layout_height="46dp"
        android:text="OK"
        android:textSize="13dp"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonCancel"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="104dp" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="73dp"
        android:layout_height="47dp"


        android:text="CANCEL"
        android:textSize="12dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="104dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="192dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="255dp"
        android:orientation="horizontal" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarProfile"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/slika"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/cancelButton"
        android:layout_width="34dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/unchecked"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/checkButton"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:clickable="true"
        app:srcCompat="@drawable/alright"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp" />

</android.support.constraint.ConstraintLayout>
