<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borderz"
    tools:context="com.example.riki.myplaces.FriendProfileActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/phoneFriend"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.295"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/lastNameFriend"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/pointsFriend"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="114dp"
        app:layout_constraintTop_toBottomOf="@+id/friendPhoto"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/emailFriend"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/nameFriend"
        app:layout_constraintHorizontal_bias="0.772"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarProfile"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/imageViewSlika"
        android:layout_width="199dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/crne"
        tools:layout_editor_absoluteY="6dp"
        app:layout_constraintRight_toLeftOf="@+id/toolbarProfile"
        app:layout_constraintLeft_toRightOf="@+id/toolbarProfile"
        app:layout_constraintHorizontal_bias="0.523"
        tools:layout_editor_absoluteX="95dp" />


    <ImageView
        android:id="@+id/cancelButton"
        android:layout_width="25dp"
        android:layout_height="34dp"
        android:clickable="true"
        app:srcCompat="@drawable/unchecked"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp" />

    <ImageView
        android:id="@+id/friendPhoto"
        android:layout_width="186dp"
        android:layout_height="167dp"
        app:srcCompat="@drawable/friends"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlika"
        android:layout_marginTop="67dp" />

    <TextView
        android:id="@+id/lastNameFriend"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="253dp"
        app:layout_constraintHorizontal_bias="0.295"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/nameFriend"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="253dp"
        app:layout_constraintHorizontal_bias="0.772"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_begin="192dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />


</android.support.constraint.ConstraintLayout>
